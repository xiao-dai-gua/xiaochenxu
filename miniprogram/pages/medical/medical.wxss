/* pages/fire/fire.wxss */
page{
  background-color: red;
}
.img-bottom{
  width: 100%;
}
.swiper_img{
  margin-bottom: 70rpx;
}
swiper{
  background-color: white;
  justify-items: center;
  position: relative;
}
.swiper_text{
  position: absolute;
  top:30%;
  left:30%;
  color:red;
  font-size: larger;
  letter-spacing: 8rpx;
}
.content_box{
  display: flex;
  flex-direction:row;
  align-items: center;
}
.content_box .help{
  color:white;
  margin: 10rpx;
  letter-spacing: 10rpx;
}
.content_box .box{
  display: flex;
  justify-content: center;
  text-align: center;
  flex-direction: column;
  justify-items: center;
  position: absolute;
  bottom: 0rpx;
  left: 200rpx;
  float: left;
  opacity: 0.6;
}
.content_box .box1{
    display: flex;
    justify-content: center;
    text-align: center;
    flex-direction: column;
    float: left;
    justify-items: center;
    position: absolute;
    top: 250rpx;
    right: 50rpx;
    opacity: 0.8;

}
.content_box image{
  width: 100rpx;
  height: 100rpx;
  border:2px solid #00ff80;
  background-color: white;
  border-radius: 50%;
}
.content{
  width: 100%;
  margin-top:100rpx;
  color:white;
  font-size: large;
  letter-spacing: 10rpx;
}