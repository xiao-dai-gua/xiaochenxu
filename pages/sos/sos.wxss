/* pages/sos/sos.wxss */
page{
  background-color: red;
}
.container{
  display: flex;
  position: relative;
}
.container .circle{
  width: 350rpx;
  height: 350rpx;
  background-color: #ffffff;
  line-height: 350rpx;
  text-align: center;
  border-radius: 50%;
  position: absolute;
  top:350rpx;
  left: 30rpx;
}
.container .circle text{
  color:red;
  font-size: 150rpx;
}
.stop_circle{
  background-color: blue;
}
.button{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.button .help{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.button image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
.button text{
  color:#ffffff;
  letter-spacing: 8rpx;
}
.button .ring{
  position:absolute;
  top:220rpx;
  left:370rpx;

}
.button .call{
  position:absolute;
  top:430rpx;
  left:500rpx;
}
.button .information{
  position: absolute;
  top:650rpx;
  left:400rpx;
}